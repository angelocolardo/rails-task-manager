<h1>This is your list of tasks</h1>

<% @tasks.each do |task| %>
<% if task.completed == true %>
<p> <%= "[X]" %><%= link_to task.title, task_path(task) %> </p>
<% else %>
<p> <%= "[ ]" %><%= link_to task.title, task_path(task) %></p>
<% end %>
<% end %>

<p><%= link_to "Add a new task", "tasks/new" %></p>



