<h1><%= @task.title %></h1>


<p><%= @task.details %></p>
<p>
<% if @task.completed == true %>
<%= "[X] - This task is completed" %>
<% else %>
<%= "[ ] - This task is not completed yet" %>
<% end %>
</p>
<p>
<%= link_to "Back", "/tasks"  %>
</p>
<p><%= link_to "Edit task", task_edit_path(@task) %></p>

<p><%= link_to "Delete task", delete_task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>

